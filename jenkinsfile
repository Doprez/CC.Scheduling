pipeline
{
	agent any
	
	stages
	{
		stage('Restore')
		{
			steps 
			{
				sh "dotnet restore"
			}
		}
		stage('Clean')
		{
			steps 
			{
				sh "dotnet clean"
			}
		}
		stage('Build')
		{
			steps 
			{
				sh "dotnet build"
			}
		}
		
	}
	
	post
	{
		failure
		{
			mail bcc: '', body: "<b>Error</b><br>Project: {$env.JOB_NAME}</br><br>Build Number: {$env.BUILD_NUMBER}</br><br>Build URL: {$env.BUILD_URL}</br>", cc: '', charset: 'UTF-8', from: '', mimeType: 'text/html', subject: "BUILD FAILED: {env.JOB_NAME}", to: "";
		}
	}
}